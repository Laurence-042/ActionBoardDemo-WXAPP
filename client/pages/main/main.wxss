/* pages/main/main.wxss */
.main_wrap {
  background-color: #2b2b2b;
  display: flex;
  flex-direction: column;
}

.action {
  margin: 2vh;
  padding: 2vh;
  background-color: #6c6c6c;
  border: 1px;
  border-color: #2b2b2b;
  display: flex;
  flex-direction: column;
}


.title{
  padding: 1vh, 0vh;
  border-color: #1b1b1b;
  font-size: 1.3rem;
  color: #e0e0e0;
  background-color: #888888;
}

.refresh-view {
  position: fixed;
  right: 5vh;
  bottom: 5vh;
  width: 20vh;
  height: 10vh;
  text-align: center;
  line-height: 50px;
  background-color: #1AAD19;
  color: #fff;
}

.activity_options_view{
  display: flex;
  flex-direction: row;
}